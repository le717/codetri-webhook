  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "console": "internalConsole",
      "env": {
        "FLASK_APP": "wsgi.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "SECRET_KEY": "SECRET TUNNEL THROUGH THE MOUNTAINS",
        "SYS_VARS_PATH": "${workspaceFolder}/secrets"
      },
      "args": [
        "run",
        "--no-debugger"
      ],
      "jinja": true,
      "justMyCode": true,
    }
  ]
}
